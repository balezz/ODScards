<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.balezz.odsquiz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ods">
        <activity android:name="ru.balezz.odsquiz.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ru.balezz.odsquiz.LectureListActivity" />
        <activity android:name="ru.balezz.odsquiz.LecturePageActivity" />
        <activity android:name="ru.balezz.odsquiz.FlashCardActivity"/>
        <activity android:name="ru.balezz.odsquiz.QuestActivity"/>
    </application>

</manifest>